<% @latest_stations.each_with_index do |station, index| %>
  <div class="artist_box png_fix <%= "last_box" if (index+1) % 3 == 0 %>">
    
    <% if station.artist_id.nil? %>
      <%= avatar_for(nil, :new_medium) %>
    <% else %>
      <%= four_thumbs_to(station.station, {:type => :big}) %>
    <% end %>

    <div class="overlay">
      <div class="hidden">
        <% if station.owner_id.nil? %>
          <%= avatar_for(nil, :artist_icon) %>
        <% else %>
          <%= link_to avatar_for(station.owner, :artist_icon), station.owner %>
        <% end %>
        
        <span>
          <span class="blue"><%= station.owner.name %></span><br/>
          <%= t('basics.created_at', :when => distance_of_time_in_words_to_now(station.created_at)) %>
        </span>
        <br class="clearer" />

        <%= t("basics.contains") %>:
        <%= station.includes(3).map {|user_station_artist| link_to user_station_artist.artist.name, user_station_artist.artist, :target => '_blank'}.join(", ") %>
      </div>

      <div class="visible">
        <%= link_to_function image_tag("play_button.png", :class => "play_button", :alt => "Play"), "createStation(\"#{station.name}\")" %>

        <%= link_to truncate(station.name,15), artist_path(station.artist), :title => station.name %>
        <% 
          # phase 2 
          if false 
        %>        
        <br/>
        <div class="rating_stars">
          <a href="#"><img src="images/star_blue.png" alt="" /></a> <a href="#"><img src="images/star_blue.png" alt="" /></a> <a href="#"><img src="images/star_blue.png" alt="" /></a> <a href="#"><img src="images/star_blue.png" alt="" /></a> <a href="#"><img src="images/star_white.png" alt="" /></a>
        </div>
        <% end %>
      </div>
    </div><!--/end overlay -->
  </div><!--/end artist_box -->

  <% if index == 2 %>
    <br class="clearer" />
  <% end %>

<% end %>  
<br class="clearer" />
<br/><br/>
