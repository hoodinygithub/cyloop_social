<% if profile_user and profile_user.stations %>
  <div class="box_content">
    <h1><%= t("dashboards.top_stations") %></h1>

    <% profile_user.stations.most_created(3).each_with_index do |top_station, i| %>
      <div class="medium_thumb">
        <%= four_thumbs_to(top_station.station) %>
        <br class="clearer">
        <%
          #= link_to(truncate(top_station.artist.name, 13), top_station.artist, :title => top_station.artist.name) 
        %>
      </div>
    <% end %>
    
    <% index = (3 - profile_user.stations.most_created(3).size) %>
    <% index.times do |i| %>
      <div class="empty_box gb_medium <%= "last_box" if i == (index-1) %>">
        &nbsp;
      </div>
    <% end %>
    <br class="clearer">

    <% if profile_user.stations.most_created(3).size >= 3 %>
      <div class="align_right">
        <b>
          <%= link_to(t('actions.view_more'), '#') %>
        </b>
      </div>
    <% end %>
  </div>
<% end %>
