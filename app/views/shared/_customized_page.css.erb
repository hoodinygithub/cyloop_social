<% if @user.color_main_font %>
#page_wrapper { color: #<%=h @user.color_main_font %>; }
<% end %>
<% if @user.color_links %>
#page_wrapper a, 
#page_wrapper a:visited, 
.navigation a,
.navigation a:visited, 
.additional_meta .time .count, 
.additional_meta .songs .count, 
#stats_following_count, 
#stats_followers_count, 
#stats_song_plays_count, 
#stats_visits_count, 
#stats_total_listens_count { 
	color: #<%=h @user.color_links %>; 
} 

div#list_header span.count {
	color: #<%=h @user.color_links %> !important; 	
}

#page_wrapper .chart div.bar, div#start_listening .button { 
	background-color: #<%=h @user.color_links %>; 
}

.chart div#chart_bar div.bar_right {
	background-color: #<%=h @user.color_links %> !important; 
}

<% end %>

<% if @user.color_header_bg %>
#mast_head, #header_wrapper { 
	background-color: #<%=h @user.color_header_bg %>; 
}
<% end %>
body {
<% if @user.color_bg %>
	background-color:  #<%=h @user.color_bg %>;
<% end %>
<% if @user.background? %>
  background-image: url('<%=h @user.background_file_name %>');
  <%= "background-repeat: #{symbol_to_css_value(@user.background_repeat)};" if @user.background_repeat %>
  <%= "background-attachment: #{@user.background_fixed ? 'fixed' : 'scroll'};" %>
  <%= "background-position: #{symbol_to_css_value(@user.background_align)};" %>
<% end %>
}
