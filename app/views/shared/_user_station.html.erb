<div class="artist_box png_fix <%= "last_box" if (user_station_counter+1) % columns == 0 %>">  
  <%= four_thumbs_to(user_station.station, :type => :big) %>
  <div class="overlay">
    <div class="hidden">
      <%= link_to avatar_for(user_station.owner, :artist_icon), user_station.owner %>    
      <span>
        <span class="blue"><%= link_to user_station.owner.name, user_station.owner %></span><br/>
        <%= t('basics.created_at', :when => distance_of_time_in_words_to_now(user_station.created_at)) %>
      </span>
      <br class="clearer" />
      <%= station_contains(user_station) %>
    </div>

    <div class="visible">
      <%= link_to(image_tag('play_button.png', :title => t('actions.play')), radio_path(:station_id => user_station.station.id), :class => 'play_button') %>

      <%= link_to truncate(user_station.name, :length => 25), radio_path(:station_id => user_station.station.id), :title => user_station.name %>
    </div>
  </div><!--/end overlay -->
</div><!--/end artist_box -->
<% if (user_station_counter+1) % columns == 0 %>
  <br class="clearer" />
<% end %>  
