%li.search#search_main
  .form
    - form_for :search, :url => search_path, :html => { :onsubmit => 'return HeaderSearch.buildSearchUrl();', :method => :get, :id => :header_search_form } do |f|
      %span.field_wrap
        = text_field_tag :q, nil, :id => :search_query, :class => "text"
      = f.hidden_field :scope, :name => :scope, :value => :artists
      - if site_includes(:msnbr)
        = f.hidden_field :market, :name => :mkt, :value => 'pt-BR'
      - if site_includes(:msnmx)
        = f.hidden_field :market, :name => :mkt, :value => 'es-MX'
        = f.hidden_field :FORM, :name => "FORM", :value => "MSNH74"        
      - if site_includes(:msnlatam, :msnar)
        = f.hidden_field :market, :name => :mkt, :value => 'es-XL'
      - if site_includes(:msnlatino)
        = f.hidden_field :market, :name => :mkt, :value => 'es-us'
        = f.hidden_field :FORM, :name => "FORM", :value => "MSNHES"
      - if site_includes(:msncafr, :msncaen)
        = f.hidden_field :FORM, :value => 'SBENTE'            
      - if site_includes(:msncaen)
        = f.hidden_field :market, :name => :mkt, :value => 'en-ca'
      - if site_includes(:msncafr)            
        = f.hidden_field :market, :name => :mkt, :value => 'fr-ca'                          
      = submit_tag t('actions.search'), :class => "submit"
  %ul.options
    %li
      .inner
        = link_to(t('navigation.search_artists'), search_url(:scope => :artists), :id => "search_artists")
    %li
      .inner
        = link_to(t('navigation.search_songs'), search_url(:scope => :songs), :id => "search_songs")
    %li
      .inner
        = link_to(t('navigation.search_albums'), search_url(:scope => :albums), :id => "search_albums")            
    %li
      .inner
        = link_to(t('navigation.search_users'), search_url(:scope => :users), :id => "search_users")
    - if site_includes(:msnbr, :msnmx, :msnlatam, :msnar, :msnlatino, :msncafr, :msncaen)
      %li
        .inner
          = link_to(t('navigation.search_web'), {}, :id => "search_web")
