<h1><%= t('basics.artists')%></h1>

<div class="sorting">
  <%= sort_link_to :relevance %> /
  <%= sort_link_to :alphabetical %>
</div>

<ul class="followers_list">
  <% @results[:artists].each do |artist|%>
    <li>
        <%= link_to(avatar_for(artist, :search, {:alt => " #{artist.name}", :class =>"follower_image"}),artist) %>
        <div class="follower_text">
            <b><%= link_to artist.name, artist %></b><br/>
            <% unless artist.city.nil? %>
            <span><%= artist.city %></span><br/>
            <% end %>
            <% unless artist.genre.nil? %>
            <span><%= artist.genre.name %></span>
            <% end %>
        </div>

        <div class="follower_actions w_settings">
            <!-- phase 2 <a href="#"><img src="/images/play_button.png" class="png_fix" alt="" /></a> -->
            <% if current_user && current_user.follows?(artist) %>
              <%= green_button(t('actions.unfollow'),
                :onclick => "Base.community.unfollow('#{artist.slug}', this, #{following_page?})",
                :class => 'follower_btn') %>
            <% else %>
              <%= blue_button(t('actions.follow'),
                :onclick => "Base.community.follow('#{artist.slug}', this, #{following_page?})",
                :class => 'follower_btn') %>
            <% end %>
            <br/>
        </div>
        <br class="clearer" />
        <div class="long_text"><a href="#"><%= artist.total_user_stations %></a> <%= t('basics.stations') %> / <a href="#"><%= artist.follower_count %></a> <%= t('users.stats.followers') %></div>
    </li>
  <% end %>
</ul><!--/end followers_list -->

