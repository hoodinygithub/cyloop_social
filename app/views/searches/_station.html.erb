<h1><%= t('basics.stations')%></h1>

<div class="sorting">
   <%= link_to t('sort.relevance'), "/search/#{params[:mkt]}/station/#{params[:q]}?order=def" , :class => params[:order]=='def' ? "active": "" %> /  <%= link_to t('sort.alphabetical'), "/search/#{params[:mkt]}/station/#{params[:q]}?order=alpha" , :class => params[:order]=='alpha'? "active": "" %> / <%= link_to t('sort.latest'), "/search/#{params[:mkt]}/station/#{params[:q]}?order=rel" , :class => params[:order]=='rel' || params[:order].blank? ? "active": "" %>
</div>


<ul class="subcriptions_list">
  <% @results.each do |station|%>
    <li>
        <a href="<%= radio_path(:station_id => station.id) %>"><img src="images/listen_icon.png" class="listen_icon png_fix" alt="" title="Listen" /></a>

        <div class="four_thubms_big">
            <%= four_thumbs_to(station.station, {:type => :big}) %>
        </div><!--/end four_thubms_big -->

        <div class="subcription_text">
            <big><%= link_to(station.name, station.artist ) %></big><br/>
            <span class="grey"><%= t('basics.last_modified') %> <%= station.updated_at.strftime("%m/%d/%Y") %></span><br/>
            <%= t('basics.contains') %>:
            <% station.includes.each do |included_artist| %>
              <%= link_to included_artist.name, included_artist.artist %>,
            <% end %>
            ...<br/>

            <div class="buttons">
                <%= link_to(image_tag("listen_button.png", :class => "png_fix", :alt => "", :title => "Listen" ), radio_path(:station_id => station.id) ) %>
                <%= link_to(image_tag("play_button.png", :class => "png_fix", :alt => "", :title => "Play" ), radio_path(:station_id => station.id) ) %>
            </div>

            <div class="subcription_creator">
              <% unless station.user_stations.first.nil? %>
                <div id="logo"><%= avatar_for(station.user_stations.first.owner, :search, {:alt => ""}) rescue "" %></div>
                <div class="creator_text">
                    <b><%= t('basics.created_by') %> <%= link_to(station.user_stations.first.owner.name, "/#{station.user_stations.first.owner.slug}") rescue "" %></b><br/>
                    <%= render :partial =>'searches/user_following', :locals => {:current_user => current_user, :user =>station.user_stations.first.owner} if current_user %>
                    <%= render :partial =>'searches/user_following', :locals => {:user =>station.user_stations.first.owner} unless current_user %>
                </div>
              <% end %>
            </div>
        </div><!--/end subcription_text -->
        <br class="clearer" />
      </li>
  <% end %>
</ul><!--/end followers_list -->

