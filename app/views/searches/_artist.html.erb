<h1>ARTISTS</h1>

<div class="sorting">
    <%= link_to "RELEVANCE ", "/search/#{params[:mkt]}/artist/#{params[:q]}?order=rel" , :class => params[:order]=='rel'? "active": "" %> / <%= link_to "ALPHABETICAL ", "/search/#{params[:mkt]}/artist/#{params[:q]}?order=alpha" , :class => params[:order]=='alpha'? "active": "" %>
</div>

<ul class="followers_list">
  <% @results.each do |artist|%>
    <li>
        <a href="#"><div id="logo"><%= avatar_for(artist, :search, {:alt => " #{artist.name}", :class =>"follower_image"}) %></div></a>
        <div class="follower_text">
            <b><a href="#"><%= artist.name %></a></b><br/>
            <span><%= "#{artist.city}" %></span><br/>
            <span><%= "#{artist.genre.name}" unless artist.genre.nil? %></span>
        </div>

        <div class="follower_actions w_settings">
            <a href="#"><img src="/images/play_button.png" class="png_fix" alt="" /></a>
            <a href="#" class="blue_button"><span><span>FOLLOW</span></span></a><br/>
        </div>
        <br class="clearer" />
        <div class="long_text"><a href="#"><%= artist.station.nil? ? "0": "1"%></a> Stations / <a href="#"><%= artist.followers.size %></a> Followers</div>
    </li>
  <% end %>
</ul><!--/end followers_list -->

