<div id="internal_content">
  <div id="main_content">
      <div class="two_columns">
          <div class="search_box">
              <%= render 'search_form',  :locals => {:query => params[:q]} %>
          </div><!--/end search_box -->

          <div id="left_column">
              <%= render 'side_link', :object =>@counts , :locals => {:active_scope => @active_scope} %>
          </div><!--/end left_column -->

          <div id="center_column">
            <%= render @active_scope.to_s, :object => @results %>
            <div class="pagination">
              <%= will_paginate @results, pagination_args%>
            </div>
          </div><!--/end center_column -->
      </div><!--/end two_columns -->

      <div id="right_column">
          <div class="ad_box">
              <a href="#"><img src="/images/ad.jpg" alt="" /></a>
          </div>
      </div><!--/end right_column -->

      <div class="clearer"></div>
  </div><!--/end main_content -->
</div><!--/end internal_content -->

