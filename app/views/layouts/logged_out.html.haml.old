!!!
%html{application_html_attrs}
  %head
    = render 'shared/head'
    = resource_tags :defaults => false, :auto => false
    = yield :head
    - if cyloop_site? && controller.action_name == "home"
      :javascript
        $(document).ready(function() {
          $('#cyloop_footer').corners("6px");
        });      
        if (!$.browser.msie) {
          $(document).ready(function() {
            $('#page_wrapper').corners("bottom 6px");
          });
        }
  %body{:class => body_classes}
    = render_messenger_app
    #main_content
      - unless cyloop_site?
        #sub_header_container.banner
          = banner_ad("top_banner")
      - if site_includes(:msnmx, :msnbr, :msnlatam, :msnlatino, :msnar, :msncaen, :msncafr)
        = render "3rd_party_branding/msn_header_#{site_code}"
      #wrap
        #mast_head
          .clearfix#logos
            - unless cyloop_site?
              %div{ :id => "msn_logo_#{current_site.code}" }
                .link
                  = msn_home_page_link
              .logo_separator
            #cyloop_logo
              .link
                = link_to 'Cyloop', root_url, :class => "fn org url", :rel => "home", :title => "Cyloop"
          #nav_main_aux_wrap.clearfix
            = render :partial => "shared/nav_aux"
            #nav_main.clearfix
              %ul.nav_tabs
                %li.tab.radio= link_to(t("navigation.radio"), radio_path)
                = render :partial => 'shared/nav_search'
      #page_wrapper.clearfix
        = render_flash
        = yield

      = render :partial => "shared/footer"
      - if site_includes(:msnlatino, :msnmx, :msnbr, :msnlatam, :msnar, :msncaen, :msncafr)
        = render "3rd_party_branding/msn_footer_#{site_code}"
