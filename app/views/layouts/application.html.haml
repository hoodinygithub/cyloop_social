%html{application_html_attrs}
  %head
    = render 'shared/head'
    = resource_tags :defaults => false, :auto => false
    = yield :head
  ///////////////////////////////
  / ALERT!!!!! THIS IS A VERY TEMPORARY TERTIARY STATEMENT!!! HACK!!!!!
  / ORIGINAL: %body{:class => body_classes}
  ///////////////////////////////
  %body{:class => (!profile_account.nil? && profile_account.slug == "gcbaradio" && profile_account.has_custom_profile?) ? body_classes("radio") : body_classes}
    #main_content
      = render_messenger_app
      - unless cyloop_site?
        #sub_header_container.banner
          = banner_ad("top_banner")
      = render :partial => "shared/mast_head"
      - if site_includes(:msnbr) && controller.controller_name == "radio"
        #custom_header
      #page_wrapper
        = render_flash
        = yield
      - if site_includes(:msnbr) && controller.controller_name == "radio"
        #custom_footer
      = render :partial => "shared/footer"
      - if site_includes(:msnlatino, :msnmx, :msnbr, :msnlatam, :msnar, :msncaen, :msncafr)
        = render "3rd_party_branding/msn_footer_#{site_code}"
