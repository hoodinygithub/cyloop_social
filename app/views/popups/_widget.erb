// widget object
Cyloop = {};
Cyloop.Widget = function(options)
{ 
  // widget options
  this.options = options;
  this.mini = false;

  // widget ui
  this.element = jQuery("#" + this.options.elementId);
  
  var css  = "<style type='text/css'>";
      css += "div#widgView div#initialWrapper div#initialBody a, .submit_custom_button, div#widgView div#widgFooter span.poweredBy { background-color: #<%= campaign.hexcolor %> !important; }";
