// embed load command
var intID, opt;
function loadWidget(klass)
{
  intID = setInterval(checkLoaded, 1000);
  opt = klass;
}

// check for loaded dependencies
function checkLoaded()
{
  if(READY) 
  {
    clearInterval(intID);
    return new Cyloop.Widget(opt);
  }
}

