.clearfix#list_header
  .title
    %h3= possessive :followers
  
.filters
  %p.label== #{t('actions.filter_by')}:
  - if profile_type?("User")
    %a.filter{:href => following_index_path}
      %span= t('followings.following')
  %a.filter.active{:href => "javascript:void(0)"}
    %span= t('followings.followers')
  - if (profile_account == current_user && current_user.private?)
    %a.filter{:href => my_follow_requests_path}
      %span= t('followings.follow_requests') 

%ul.following#followers
  - @followers.each do |follower|
    %li.clearfix[follower]
      = render 'followers/follower', :follower => follower

= will_paginate @followers, pagination_args
