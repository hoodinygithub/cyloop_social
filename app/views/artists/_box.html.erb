<div class="artist_box png_fix <%= style if defined? style %>">
    <% if defined? node %>
      <%= image_tag("#{ENV['ASSETS_URL']}#{node.image}", :class => 'artist_icon_box') %>
    <% end %>
    
    <% if false %>
      <span class="close_btn <%= place_type if defined? place_type %>">Close</span>
    <% end %>
    
    <div class="overlay">
        <div class="hidden">
            <% if defined? node %>
              <%= image_tag("#{ENV['ASSETS_URL']}#{node.image}", :class => 'artist_icon_box tiny artist_icon') %>
            <% end %>
            <span>
                <span class="blue">
                  <% if defined? node %>
                    <%= artist_name(node) %>
                  <% end %>
                </span><br/>
            </span>
            <br class="clearer" />
            
            <% if defined? node %>
              <%= station_contains(node) %>
            <% end %>
            
            <br/><br/>
            <b>
              <% if defined? node %>
                <%= link_to artist_name(node) + "<br />Station", artist_url(node) %>
              <% end %>
            </b>
        </div>
        
        <div class="visible">
            <%= link_to(image_tag('play_button.png', :class => 'play_button'), '#') %>
        </div>
    </div><!--/end overlay -->
</div><!--/end artist_box -->

<% if defined? clearer %>
  <br class="clearer" />
<% end %>
