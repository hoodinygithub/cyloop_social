<div class="two_columns">
    <div class="search_box light_grey">
        <form action="" method="post">
            <div align="center"><img src="images/cyloop_mixes.gif" alt="" /></div>
            <br/>
            <div class="title"><%= t('radio.getting_started') %></div>
            <span class="text_input_placeholder">
                <input type="text" value="<%= t('radio.search_hint') %>" onfocus="clearInput('<%= t('radio.search_hint') %>', this);" onblur="restoreInput('<%= t('radio.search_hint') %>', this);" />
            </span>
            
            <span class="btn_placeholder">
                <a href="#" class="blue_button"><span><span><%= t('actions.listen').upcase %></span></span></a>
            </span>
            <br/><br/><br/>
            <div class="medium_text grey2">
              <%= t('radio.select_recommended_stations_below') %>                
            </div>
        </form>
    </div><!--/end search_box -->

    <h1><%= t('modules.recommended_stations.title') %></h1>
    <%= render :partial => 'shared/abstract_station', :collection => @recommended_stations, :locals => { :columns => 4 } %>    
    <br class="clearer" />
</div><!--/end two_columns -->