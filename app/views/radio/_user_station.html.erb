<%= four_thumbs_to(@station_obj, :class => 'left_side', :clearer => true, :type => :small) %>
<div id="now_playing_user_station" class="album_text2">
  <span class="station_name"><%= @station_obj.playable.artist.name %></span>
  <% if @station_obj.playable.owner_is? current_user %>
  <a href="#" onclick="Base.stations.edit(<%= @station_obj.id %>, this); return false;"><img src="images/edit_button_small.png" class="png_fix valign_middle" alt="<%= t('actions.edit') %>" /></a>
  <% end %>
  <br/>
  <small class="grey"><%= t("basics.last_modified") %>: <%= l(@station_obj.updated_at.to_date) %></small><br/>
  <small><%= station_contains(@station_obj.playable) %></small>
</div><!--/end top_buttons -->

<div class="album_actions2">
  <%= blue_button(t("radio.create_new_station"), :href => "#create_new_station", :class => "create_new_station") %><br/>
  <b><%= t("basics.created_by") %>: <%= link_to(@station_obj.playable.owner.name, "/#{@station_obj.playable.owner.slug}") %></b>
</div>