<div class="top_radios_column">
  <h1><%= t("home.top_radios") %></h1>
  <% @top_user_stations.each_with_index do |radio, index| %>
    <div class="artist_box png_fix <%= "last_box" if (index+1) % 6 == 0 %>">
      
      <% if radio.user_station.artist_id.nil? %>
        <%= avatar_for(nil, :new_medium) %>
      <% else %>
        <%= four_thumbs_to(radio.user_station.station, {:type => :big}) %>
      <% end %>

      <div class="overlay">
        <div class="hidden">
          <% if radio.user_station.artist_id.nil? %>
            <%= avatar_for(nil, :artist_icon) %>
          <% else %>
            <%= link_to avatar_for(radio.user_station.owner, :artist_icon), radio.user_station.owner %>
          <% end %>
          
          <span>
            <span class="blue"><%= radio.user_station.owner.name %></span><br/>
            <%= t('basics.created_at', :when => distance_of_time_in_words_to_now(radio.user_station.created_at)) %>
          </span>
          <br class="clearer" />

          <%= t("basics.contains") %>:
          <%= radio.user_station.includes.map {|inc| link_to inc.artist.name, inc.artist, :target => '_blank'}.join(", ") %>
        </div>

        <div class="visible">
          <%= link_to_function image_tag("play_button.png", :class => "play_button", :alt => "Play"), "createStation(\"#{radio.user_station.name}\")" %>

          <%= link_to truncate(radio.user_station.name,15), artist_path(radio.user_station.artist), :title => radio.user_station.name %><br/>
          <%= link_to_function t("home.station"), "createStation(\"#{radio.user_station.name}\")" %>
        </div>
      </div><!--/end overlay -->
    </div><!--/end artist_box -->
  <% end %>
  
  <br class="clearer" />
</div><!--/end top_radios_column -->
