- if @feed_news && !@feed_news.empty?
  .grey.headline.clearfix
    %h2
      %span
        =t 'modules.news.title'
  %ul
    - @feed_news.each_with_index do |feed, index|
      %li.clearfix{ :class => (index == 0 || 2) ? 'odd' : "even" }
        %div.image
          - begin
            = link_to image_tag(feed.image), feed.link
          - rescue
            = link_to image_tag(" "), feed.link
        %div.text
          = link_to truncate(feed.title, :length => 71), feed.link, {:style=> "height:none;"}

