<h1><%= t('dashboards.user_latest_stations', :user_name => profile_account.first_name.upcase) %></h1>
<% if @latest_stations.empty? %>
  <div class="big_round_box png_fix">
    <%= t("user.hasnt_create_any_station", :user_name => profile_account.name.upcase) %>
  </div>
<% else %>
  <%= render :partial => 'shared/user_station', :collection => @latest_stations, :locals => { :columns => 3 } %>
  <% index = max_stations - @latest_stations.size %>
  <% index.times do |i| %>
    <div class="empty_box gb_big <%= "last_box" if i == (index-1) or (i+1+@latest_stations.size) == 3 %>">
      &nbsp;
    </div>
    <% if (i+1+@latest_stations.size) == 3 %>
      <br class="clearer" />
    <% end %>
  <% end %>
<% end %>
