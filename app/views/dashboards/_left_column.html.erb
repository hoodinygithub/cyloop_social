<div id="left_column">
  <%= render 'dashboards/account_info' unless profile_owner? %>

  <% if profile_user? %>
    <div class="black_boxes">
      <%= render 'dashboards/user_stations_mixes_and_visits' %>
      <%= render 'dashboards/following_count' if profile_owner? %>
      <div class="clearer"></div>
    </div><!--/end black_boxes -->
  <% end %>

  <% if profile_artist? %>
    <div class="black_boxes">
      <%= render 'dashboards/user_stations_mixes_and_visits' %>
      <div class="clearer"></div>
    </div><!--/end black_boxes -->

    <% unless profile_account.websites.empty? %>
      <div class="big_black_box">
        <%= render 'dashboards/websites' %>
      </div>
    <% end %>
    <% if profile_artist.has_station? %>
      <div class="big_black_box">
        <%= radio_play_button(profile_artist.station.id, :class => 'play_button')  %>
        <span>
          <b>&nbsp;&nbsp;<span class="blue"><%= link_to profile_artist.station.name, radio_path(:station_id => profile_artist.station.id) %></span></b>
          <br/>
        </span>
        <br class="clearer" />
        <%= station_contains(profile_artist.station) %>
      </div>
    <% end %>
  <% end %>



  <%= render 'dashboards/user_buttons' %>
  <%= account_sidebar_links %>
</div><!--/end left_column -->

